<% @page_title = "#{@page.name}" %>

<% if current_user.can_edit?(@site) && !@page.new_record? %>
<% @page_actions = link_to('Edit this page', edit_site_page_path(@site, @page)) %>
<% end %>

<% if @page && @page.attachments.any? %>
	<ul class="callout">
		<b>Attachments</b><br>
		<% for attachment in @page.attachments %>
			<li><%= link_to attachment.document.name, download_site_document_path(@site, attachment.document) %></li>
		<% end %>
	</ul>
<% end %>

<% if @page && @page.events.any? %>
	<ul class="callout">
		<b>Events</b><br>
		<% for event in @page.events %>
			<li><%= link_to event.name, site_event_path(@site, event) %> <%= event.start_at.to_s(:short) %></li>
		<% end %>
	</ul>
<% end %>

<div class="user_generated"><%= raw @page.content %></div>

<%= render 'comments/page_comments', :page => @page if @page.comments_allowed? %>