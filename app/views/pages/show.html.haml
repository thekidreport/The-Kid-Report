- @page_title = "#{@page.name}"
- if current_user && current_user.can_edit?(@site) && !@page.new_record?
  - @page_actions = link_to('Edit this page', edit_site_page_path(@site, @page))
- if @page && @page.attachments.any?
  %ul.callout
    %b Attachments
    %br
      - for attachment in @page.attachments
        %li= link_to attachment.document.name, download_site_document_path(@site, attachment.document)
- if @page && @page.events.think_about.any?
  %ul.callout
    %h3 Events
    - for event in @page.events.think_about
      %li{:style => 'margin-bottom:.5em'}
        .name= event.name
        .date= event.start_at.to_s(:pretty)
        - if event.end_at? && event.end_at != event.start_at
          .date= event.end_at.to_s(:pretty)
        .location= event.location
.user_generated= raw @page.content

- if @page.comments_allowed?
  #comments
    = render 'comments/page_comments', :page => @page 