<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN""http://www.w3.org/TR/html4/strict.dtd">
<html class="<%= browser %>">
    <head>
        <title><%= @page_title %></title>
				<%= javascript_include_tag :defaults %>
				<%= include_tiny_mce_if_needed %>
				<%= javascript_include_tag 'picky_color' %>
				<%= stylesheet_link_tag 'picky_color' %>
				<%= stylesheet_link_tag ['shared', 'site'] %>
				<%= csrf_meta_tag %>
				<style>
					body { <%= "background-color: ##{@site.background_color};" if @site.background_color.present? %>}
					#body_wrapper { <%= "background-color: ##{@site.body_color};" if @site.body_color.present? %>}
					#gutter, .highlight_colored { <%= "background-color: ##{@site.highlight_color};" if @site.highlight_color.present? %>}
					#footer { <%= "border-top:1px solid ##{@site.highlight_color};" if @site.highlight_color.present? %>  }
					#content, #header, #footer { <%= "color: ##{@site.font_color};" if @site.font_color.present? %>}
					a { <%= "color: ##{@site.link_color};" if @site.link_color.present? %>}
					.page_nav li a { <%= "background-color: ##{@site.link_color};" if @site.link_color.present? %>}
					.page_nav li a { <%= "color: ##{@site.highlight_color};" if @site.highlight_color.present? %> }
				</style>
    </head>
    <body>
		<div id="body_wrapper">			
			<div id="header" class="highlight_colored">
				<%= link_to image_tag('mini_logo.png'), root_path %> : <%= link_to @site.name, permalink_path(@site.permalink, @site.home_page.try(:permalink)) %>
				<div id="user_nav">
					<% if user_signed_in? %>
						Welcome, <%= link_to current_user.display_name, edit_user_registration_path %> | <%= link_to 'Sign out', destroy_user_session_path %>
					<% else %>
						<%= link_to 'Sign in', new_user_session_path %> | <%= link_to 'Create account', new_user_registration_path %>
					<% end %>
				</div>
			</div>
			<div id="body">
				<table class="framework"><tr><td class="left" style="width:160px">
					<div id="gutter">
						<% if @site.logo.exists? %>
							<div id="logo" class="image"><%= link_to_unless_current image_tag(@site.logo(:original)), permalink_path(@site.permalink, @site.home_page.try(:permalink)) %></div>
						<% else %>
							<div id="logo" class="text"><%= link_to_unless_current @site.name, permalink_path(@site.permalink, @site.home_page.try(:permalink)) %></div>
						<% end %>
						<ul class="page_nav">
							<% for page in @site.pages.order('position') %>
							<li><%= link_to page.name, permalink_path(@site.permalink, page.permalink) %></li>
							<% end %>
						</ul>
						<% if current_user.can_edit?(@site) %>
						<ul id="tools">
							<h3>Tools</h3>
							<li><%= link_to 'Preferences', edit_site_path(@site) %></li>
							<li><%= link_to 'Pages', site_pages_path(@site) %><%= link_to 'New', new_site_page_path(@site), :title => 'New page', :class => 'new' %></li>
							<% if current_user.can_admin?(@site) %><li><%= link_to 'Memberships', site_memberships_path(@site) %><%= link_to 'New', new_site_membership_path(@site), :title => 'New membership', :class => 'new' %></li><% end %>
							<li><%= link_to 'Messages', site_messages_path(@site) %><%= link_to 'New', new_site_message_path(@site), :title => 'New message', :class => 'new' %></li>
							<li><%= link_to 'Documents', site_documents_path(@site) %><%= link_to 'New', new_site_document_path(@site), :title => 'New document', :class => 'new' %></li>
							<li><%= link_to 'Activity Log', site_log_entries_path(@site) %></li>
						</ul>
						<% end %>
					</div>
				</td><td class="right">
					<div id="content">
						<%= raw notice flash[:notice] %>
						<h1 id="page_title"><%= @page_actions %><%= @page_title %></h1>
						<%= yield %>
					</div>
				</td></tr></table>
			</div>
			<div id="footer">
				<% if @page && !@page.new_record? %>
					<%= pluralize @page.visitor_count, 'Visitor' %> <%= (@page.visitor_count_start_at).strftime "since %m/%d/%Y" %>
					<% if current_user.can_edit?(@site)%>
						<%= link_to 'Reset', reset_site_page_path(@site.id, @page.id), :method => :put %>
					<% end %>
				<% end %>
				<br><%= @site.name %><%= " - #{@site.footer}" %>
			</div>
		</div>

    </body>
</html>
