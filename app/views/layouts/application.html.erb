<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN""http://www.w3.org/TR/html4/strict.dtd">
<html class="<%= browser %>">
    <head>
        <title><%= @page_title %></title>
				<meta name="keywords" content="Free, Classroom, Teacher, Parent, WebSites" />
				<meta name="description" content="Free WebSites for Parents and Teachers and Students">

				<%= javascript_include_tag :defaults %>
				<%= javascript_include_tag 'picky_color' %>
				<%= stylesheet_link_tag 'picky_color' %>
				<%= stylesheet_link_tag ['shared', 'application'] %>
				<%= csrf_meta_tag %>
    </head>
    <body>
		<div id="body_wrapper">			
			<div id="header">
				<div id="logo">
					<%= link_to image_tag('logo.png'), root_path %>
				</div>
				<div id="user_nav">
					<% if user_signed_in? %>
						Welcome, <%= link_to current_user.display_name, edit_user_registration_path %> | <%= link_to 'Sign out', destroy_user_session_path %>
					<% else %>
						<%= link_to 'Sign in', new_user_session_path %> | <%= link_to 'Create account', new_user_registration_path %>
					<% end %>
				</div>
			</div>
			<ul id="nav">
				<li><%= link_to 'Home', root_path %></li><li><%= link_to 'Walkthrough', walkthrough_path %></li>
				<li><%= link_to 'About Us', about_us_path %></li><li><%= link_to 'Contact us', new_feedback_path %></li>
			</ul>
			<div id="body">
				<div id="content">
					<%= raw notice flash[:notice] %>
					<%= raw error flash[:alert] %>
					<h1 id="page_title"><%= @page_title %></h1>
					<%= yield %>
				</div>
			</div>
			<div id="footer">
				The Kid Report - Teacher and Parent Websites
			</div>
		</div>

    </body>
</html>
