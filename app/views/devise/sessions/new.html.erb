<% @page_title = 'Sign in' %>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	<ul class="form">
  <li><%= f.label :email %>
  <%= f.text_field :email %></li>

  <li><%= f.label :password %>
  <%= f.password_field :password %>
  <%= link_to 'Forgot your password?', new_password_path(resource) %>
  </li>

  <% if devise_mapping.rememberable? -%>
    <li class="indent"><%= f.check_box :remember_me %> <%= f.label :remember_me %></li>
  <% end -%>

  <li class="indent"><%= f.submit "Sign in" %></li>
	</ul>
<% end %>
