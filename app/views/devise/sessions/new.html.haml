- @page_title = 'Sign in'
.shadow_box
  .callout
    %h3 Haven't signed up yet?
    = link_to 'Register today', new_user_registration_path
  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    %ul.form
      %li
        = f.label :email
        = f.text_field :email, :type => 'email'
      %li
        = f.label :password
        = f.password_field :password
        = link_to 'Forgot your password?', new_password_path(resource)
      - if devise_mapping.rememberable?
        %li.indent
          = f.check_box :remember_me
          = f.label :remember_me
      %li.indent= f.submit "Sign in"