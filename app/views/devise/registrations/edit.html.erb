<h1>Edit <%= resource_name.to_s.humanize %></h1>
<style>
ul.form label { width: 120px;}
ul.form li.indent { padding-left: 123px;}
</style>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= raw error_messages_for(resource) %>

	<ul class="form">
	  <li>
			<%= f.label :email %>
	  	<%= f.text_field :email %>
		</li>

		<li>
			<%= f.label :name %>
			<%= f.text_field :name %>
		</li>


	  <li><%= f.label :password, 'New Password' %> 
	  	<%= f.password_field :password %> 
			<% if resource.last_sign_in_at %><i>(leave blank if you don't want to change it)</i><% end %>
	</li>

	  <li><%= f.label :password_confirmation, 'Confirmation' %>
	  <%= f.password_field :password_confirmation %>
	</li>

	  <li class="indent"><%= f.submit "Update" %></li>
	</ul>
<% end %>
