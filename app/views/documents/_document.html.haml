%tr
  %td
    = link_to document.file_file_name, download_site_document_path(document.site, document)
  %td
    = document.created_at.to_s(:short)
  %td
    = document.pages.count
  %td
    = link_to 'Delete', site_document_path(document.site, document), :method => :delete, :confirm => "Are you sure you wish to delete this document?"
